extends layout

block content
  .container
    h1 Обработка обращения (№ #{appeal.id})

    .appeal-info
      p
        strong Тема: 
        | #{appeal.topic}
      p
        strong Текст: 
        | #{appeal.text}
      p
        strong Статус: 
        | #{appeal.status}
      p
        strong Дата создания: 
        | #{appeal.createdAt ? appeal.createdAt.toLocaleDateString() : '—'}

    form(method="POST", action=`/appeal_solution/${appeal.id}/handle`)
      div.form-group
        label(for="response") Решение / Причина отмены:
        textarea(name="response", id="response", rows="5", required)

      div.buttons-container
        button(type="submit", name="action", value="complete") Завершить
        button(type="submit", name="action", value="cancel") Отменить
        a(href="/all_appeal")
          button(type="button") Вернуться к списку